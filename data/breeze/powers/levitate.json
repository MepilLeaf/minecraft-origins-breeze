{
  "type": "origins:multiple",

  "is_active": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": {
      "should_render": true
    }
  },

  "grounded": {
    "type": "origins:resource",
    "min": 0,
    "max": 1,
    "hud_render": {
      "should_render": true
    }
  },

  "update_grounded": {
    "type": "origins:action_over_time",
    "falling_action": {
      "type": "origins:change_resource",
      "resource": "*:*_grounded",
      "operation": "set",
      "change": 0
    },
    "rising_action": {
      "type": "origins:change_resource",
      "resource": "*:*_grounded",
      "operation": "set",
      "change": 1
    },
    "interval": 1,
    "condition": {
      "type": "origins:block_collision",
      "offset_x": 0,
      "offset_y": -0.1,
      "offset_z": 0
    }
  },

  "spacebar_pressed_buffer": {
    "type": "origins:resource",
    "min": 0,
    "max": 3,
    "hud_render": {
      "should_render": true
    }
  },

  "decay_spacebar_pressed_buffer": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_spacebar_pressed_buffer",
      "change": -1
    },
    "interval": 1,
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_spacebar_pressed_buffer",
      "comparison": ">",
      "compare_to": 0
    }
  },

  "update_spacebar_pressed_buffer": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_spacebar_pressed_buffer",
      "change": 2
    },
    "cooldown": 1,
    "key": {
      "key": "key.jump",
      "continuous": true
    }
  }
}
